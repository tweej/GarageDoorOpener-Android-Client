<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="teej.garagedooropenerclient.KeypadActivity"
    tools:showIn="@layout/activity_my">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:stretchColumns="*">

        <TableRow
            android:layout_height="wrap_content">

            <TextView android:id="@+id/code"
                android:background="@android:drawable/editbox_background"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.66"
                android:textSize="20sp"
                android:singleLine="true" />

            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.23"
                android:id="@+id/clear_button"
                android:text="Clear"
                android:clickable="true"
                android:enabled="true"
                android:onClick="clearCode" />

            <ImageView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:src="@drawable/ic_menu_moreoverflow_normal_holo_light"
                android:id="@+id/menu_button"
                android:onClick="showPopupMenu" />

            <!-- TODO: Red infinite progress bar to draw attention to settings button -->
        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight=".25">

            <Button
                android:layout_height="match_parent"
                android:text="B1"
                android:id="@+id/button1"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_height="match_parent"
                android:text="B2"
                android:id="@+id/button2"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_height="match_parent"
                android:text="B3"
                android:id="@+id/button3"
                android:clickable="true"
                android:enabled="true" />

        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight=".25">

            <Button android:layout_height="match_parent"
                android:text="B4"
                android:id="@+id/button4"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_height="match_parent"
                android:text="B5"
                android:id="@+id/button5"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_height="match_parent"
                android:text="B6"
                android:id="@+id/button6"
                android:clickable="true"
                android:enabled="true" />
        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight=".25">

            <Button
                android:layout_height="match_parent"
                android:text="B7"
                android:id="@+id/button7"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_height="match_parent"
                android:text="B8"
                android:id="@+id/button8"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_height="match_parent"
                android:text="B9"
                android:id="@+id/button9"
                android:clickable="true"
                android:enabled="true" />
        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight=".25">

            <Button
                android:layout_height="match_parent"
                android:text="B0"
                android:id="@+id/button0"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight=".666"
                android:text="Submit"
                android:id="@+id/submit_button"
                android:clickable="true"
                android:enabled="true"
                android:onClick="submitCode"/>

        </TableRow>
    </TableLayout>
</RelativeLayout>
